generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  ADMIN
  USER
  SUPERADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  roles      ROLE[]     @default([USER])

  chats    ChatSession[]
  messages Message[]
  sessionUser SessionUser[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatSession {
  id        String   @id @default(cuid())
  archived  Boolean @default(false)

  user      User     @relation(fields: [userId], references: [id])
  userId    String

  messages  Message[]

  archivedChats ArchivedChats[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  content String

  user      User     @relation(fields: [userId], references: [id])
  userId    String

  chat      ChatSession @relation(fields: [chatId], references: [id])
  chatId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SharedSession {
  id        String   @id @default(cuid())
  sessionUser SessionUser[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Access {
  READ
  WRITE
  READ_WRITE
}

model SessionUser {
  id        String   @id @default(cuid())
  access    Access  @default(READ)

  user      User     @relation(fields: [userId], references: [id])
  userId    String

  session   SharedSession @relation(fields: [sessionId], references: [id])
  sessionId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model ArchivedChats{
  id        String   @id @default(cuid())

  chat      ChatSession @relation(fields: [chatId], references: [id])
  chatId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

